{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/components/*": ["src/components/*"],
        "@/utils/*": ["src/utils/*"],
        "@/styles/*": ["src/styles/*"]
      }
    },
    "include": ["src"]
  }
